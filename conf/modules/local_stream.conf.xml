<configuration name="local_stream.conf" description="Local file stream config">

  <directory name="video" path="$${sounds_dir}/video">
    <param name="shuffle" value="true"/>
    <param name="channels" value="1"/>
    <param name="interval" value="20"/>
    <param name="timer-name" value="soft"/>
  </directory>

  <directory name="audio" path="$${sounds_dir}/audio">
    <param name="shuffle" value="true"/>
    <param name="channels" value="1"/>
    <param name="interval" value="20"/>
    <param name="timer-name" value="soft"/>
  </directory>

</configuration>
