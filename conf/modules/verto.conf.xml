<configuration name="verto.conf" description="HTML5 Verto Endpoint">

  <settings>
    <param name="debug" value="0"/>
    <!-- <param name="detach-timeout-sec" value="60"/> -->
    <!-- <param name="enable-fs-events" value="false"/> -->
    <!-- <param name="enable-presence" value="true"/> -->
  </settings>

  <profiles>
     <profile name="verto4">
      <param name="bind-local" value="127.0.0.1:$${verto_ws_port}"/>
      <param name="secure-combined" value="$${certs_dir}/wss.pem"/>
      <param name="force-register-domain" value="$${hostname}"/>
      <param name="userauth" value="true"/>
      <param name="blind-reg" value="false"/>
      <param name="ext-rtp-ip" value="$${local_ip_v4}"/>
    </profile>
     <profile name="verto6">
      <param name="bind-local" value="[::1]:$${verto_ws_port}"/>
      <param name="secure-combined" value="$${certs_dir}/wss.pem"/>
      <param name="force-register-domain" value="$${hostname}"/>
      <param name="userauth" value="true"/>
      <param name="blind-reg" value="false"/>
    </profile>
  </profiles>

</configuration>
