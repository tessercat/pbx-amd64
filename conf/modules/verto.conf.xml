<configuration name="verto.conf" description="HTML5 Verto Endpoint">

  <settings>
    <param name="debug" value="$${verto_debug_level}"/>
    <!-- <param name="enable-presence" value="true"/> -->
    <!-- <param name="enable-fs-events" value="true"/> -->
    <!-- <param name="detach-timeout-sec" value="120"/> -->
  </settings>

  <profiles>
    <profile name="pbx-verto-4">
      <param name="secure-combined" value="$${certs_dir}/wss.pem"/>
      <param name="bind-local" value="127.0.0.1:$${verto_ws_port}"/>
      <param name="force-register-domain" value="pbx-clients"/>
      <param name="userauth" value="true"/>
      <param name="blind-reg" value="false"/>
      <param name="context" value="pbx-clients"/>
    </profile>
    <profile name="pbx-verto-6">
      <param name="secure-combined" value="$${certs_dir}/wss.pem"/>
      <param name="bind-local" value="[::1]:$${verto_ws_port}"/>
      <param name="force-register-domain" value="pbx-clients"/>
      <param name="userauth" value="true"/>
      <param name="blind-reg" value="false"/>
      <param name="context" value="pbx-clients"/>
    </profile>
  </profiles>

</configuration>
